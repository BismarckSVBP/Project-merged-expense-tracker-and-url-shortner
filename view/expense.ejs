<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Habit Tracker</title>
    <style>
      body {
        background-image: url(./WhatsApp\ Image\ 2024-05-31\ at\ 14.31.49_28d27a8f.jpg);
        background-color: rgba(44, 146, 229, 0.3);
      }
      .outer {
        width: 500px;
        margin: auto;
      }
      .login {
        border: 1px solid black;
        width: 400px;
        height: 700px;
        background: url(./WhatsApp\ Image\ 2024-05-31\ at\ 14.45.33_39c3af8a.jpg);
        color: white;
        border-radius: 20px;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.75);
        background-size: cover;
        background-position: center;
        overflow: hidden;
      }
      form {
        display: block;
        box-sizing: border-box;
        padding: 40px;
        width: 100%;
        backdrop-filter: brightness(40%);
        flex-direction: column;
        display: flex;
        gap: 5px;
      }
      h1 {
        font-weight: normal;
        font-size: 24px;
        text-shadow: 0px 0px 2px rgba(0, 0, 0, 0.5);
        margin-bottom: 60px;
      }
      label {
        color: rgba(255, 255, 255, 0.8);
        text-transform: uppercase;
        font-size: 10px;
        letter-spacing: 2px;
        padding-left: 10px;
      }
      input {
        background: rgba(255, 255, 255, 0.3);
        height: 40px;
        line-height: 40px;
        border-radius: 20px;
        padding: 0px 20px;
        border: none;
        margin-bottom: 20px;
        color: white;
      }

      button {
        background: rgb(45, 126, 231);
        height: 40px;
        line-height: 40px;
        border-radius: 40px;
        border: none;
        margin: 10px 0px;
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.3);
        color: white;
        font-size: 12px;
        text-transform: uppercase;
      }
    </style>
  </head>

  <body>
    <div class="outer">
      <table>
        <tr>
          <td>
            <div class="login">
               <!-- <form method="POST" action="/user/expense/post">
                <h1>Expense Tracker</h1>
                <label><b>Enter Your Income</b></label>
                <input type="text" name="incomeamount" placeholder="Enter in the form of number" />
                <label><b>Enter Your Expense</b></label>
                <input type="text" name="expenseamount" placeholder="Enter in the form of number but unique" />
                <label><b>Expense Description</b></label>
                <input type="text" name="expensedescription" />
                <label><b>Expense Category</b></label>
                <input type="text" name="expensecategory" />
                <button>Submit</button>
                
              </form> -->
              <form method="POST" action="/user/expense/post">
                <h1>Habit Tracker</h1>
                <label><b>Username</b></label>
                <input type="text" name="uname" required />  
                <label><b>Habit Name</b></label>
                <input type="text" name="expensedescription" required />              
                <label><b>Date</b></label>
                <input type="date" name="expenseamount" " />
                <label><b>Duration of time(In minutes) </b></label>
                <input type="text" name="incomeamount" placeholder="Enter in the form of minutes" />
                <label><b>Status</b></label>
                <input type="text" name="expensecategory" required/>
                <button>Submit</button>
                
              </form>
            </div>
          </td>
        
        </table>
        <br><br><br>
            <div>
              <% if (locals.details) { %>
              <table border="2px solid black"  >
                <thead>
                  <tr>
                    <th>S.no.</th>
                    <th>Username</th>  
                    <th>Habit Name</th>        
                    <th>Date</th>
                     <th>Duration of time</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <% details.forEach((url, index)=> { %>
                    <td><%= index + 1 %></td>
                    <td><%= url.uname %></td>

                    <td><%= url.expensedescription %></td>
                    <td><%= url.expenseamount %></td>
                    <td><%= url.incomeamount %></td>
                    <td><%= url.expensecategory %></td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
              <% } %>
            </div>
          </td>
        </tr>
      </table>
    </div>
  </body>
</html> 


